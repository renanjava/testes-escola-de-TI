enum UserRole {
  USER
  ADMIN
  MANAGER
}

enum ProductCategory {
  SWEET
  BREAD
  CAKE
  ICE_CREAM
  PIZZA
  SNACK
  COLD_CUTS
  DRINK
  SAVORY
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  realname  String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      UserRole @default(USER)
  bakeries  BakeryManager[]
}

model Bakery {
  id        String          @id @default(uuid())
  name      String
  cnpj      String          @unique
  address   String
  openTime  DateTime
  closeTime DateTime
  managers  BakeryManager[]
  products  Product[]
}

model BakeryManager {
  id        String  @id @default(uuid())
  manager   User @relation(fields: [managerId], references: [id], onDelete: Cascade)
  managerId String
  bakery    Bakery  @relation(fields: [bakeryId], references: [id], onDelete: Cascade)
  bakeryId  String
}

model Product {
  id            String  @id @default(uuid())
  description   String
  image         String[]
  price         Float
  quantity      Int
  disponibility Boolean
  category      ProductCategory[]
  bakery        Bakery  @relation(fields: [bakeryId], references: [id], onDelete: Cascade)
  bakeryId      String
}
